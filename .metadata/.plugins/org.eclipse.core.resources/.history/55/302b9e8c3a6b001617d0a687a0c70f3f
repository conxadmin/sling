package org.apache.sling.event.impl.jobs.config;

import java.util.Dictionary;
import java.util.Properties;

import org.apache.felix.dm.DependencyManager;
import org.apache.sling.event.impl.RequestParameterSupportConfigurer;
import org.apache.sling.settings.SlingSettingsService;
import org.osgi.framework.Constants;
import org.osgi.service.cm.ConfigurationException;
import org.osgi.service.cm.ManagedServiceFactory;
public class InternalQueueConfigurationFactory
    implements ManagedServiceFactory {
	
	public static final String PID = "";
	
	private volatile DependencyManager dm;

	@Override
	public String getName() {
		return PID;
	}

	@Override
	public void updated(String pid, Dictionary<String, ?> properties_) throws ConfigurationException {
		//InternalQueueConfiguration
		Properties properties = new Properties();
		properties.put(Constants.SERVICE_VENDOR, "The Apache Software Foundation");
		properties.put(Constants.SERVICE_DESCRIPTION, "The configuration of a job processing queue.");
	    properties.put("queue.name","");
	    properties.put("queue.topics","");
	    properties.put("queue.type" ,"UNORDERED");
	    properties.put("queue.maxparallel",15.0);
	    properties.put("queue.retries",10);
	    properties.put("queue.retrydelay",2000L);
	    properties.put("queue.priority","NORM");
	    properties.put("queue.keepJobs",false);
	    properties.put("queue.preferRunOnCreationInstance",false);
	    properties.put("queue.threadPoolSize",0);
	    properties.put("service.ranking",0);
	    properties.put("webconsole.configurationFactory.nameHint","Queue: {queue.name}");
	    
		component = dm.createComponent()
				.setInterface(InternalQueueConfiguration.class.getName(), properties)
				.setImplementation(InternalQueueConfiguration.class)
				.setCallbacks(null,"configure","configure", null)//init, start, stop and destroy.
				.add(createFactoryConfigurationAdapterService("org.apache.sling.event.jobs.QueueConfiguration", update, propagate)
	                	.setPid(RequestParameterSupportConfigurer.class.getName()))
	            .add(createServiceDependency()
	                	.setService(SlingSettingsService.class)
	                	.setRequired(true))				
	            ;
		dm.add(component);
	}

	@Override
	public void deleted(String pid) {
		// TODO Auto-generated method stub
	}
}
