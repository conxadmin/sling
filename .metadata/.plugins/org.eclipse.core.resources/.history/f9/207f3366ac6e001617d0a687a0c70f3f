			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.7</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Import-Package>*</Import-Package>
						<Export-Package>
							org.apache.sling.browser.*
						</Export-Package>
						<Sling-Initial-Content>${sling.initial.content}</Sling-Initial-Content>
					</instructions>
				</configuration>
			</plugin>
		</plugins>

	</build>

	<profiles>
		<profile>
			<!-- Use this profile to install the OSGi bundle automatically, during 
				development -->
			<id>autoInstallBundle</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<!-- Require Java 5 or higher for building -->
					<plugin>
						<groupId>org.apache.sling</groupId>
						<artifactId>maven-sling-plugin</artifactId>
						<executions>
							<execution>
								<id>install-bundle</id>
								<goals>
									<goal>install</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>apps</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
			<build>
				<plugins>
				<plugin>
					<artifactId>maven-enforcer-plugin</artifactId>
					 <version>1.3.1</version>
					<executions>
						<execution>
							<id>enforce-java</id>
							<configuration><skip>true</skip></configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<executions>
						<execution>
							<id>make-apps</id>
							<configuration>
								<descriptors>
									<descriptor>zip-assembly.xml</descriptor>
								</descriptors>
								<finalName>apps</finalName>
								<archiveBaseDirectory>src/main/resources/SLING-CONTENT/apps</archiveBaseDirectory>
								<appendAssemblyId>false</appendAssemblyId>
								<outputDirectory>target/zips</outputDirectory>
							</configuration>
							<phase>validate</phase> 
							<goals>
								<goal>single</goal> 
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
		                <groupId>org.apache.maven.plugins</groupId>
		                <artifactId>maven-antrun-plugin</artifactId>
		               <executions>
						    <execution>
						      <id>post-apps</id>
						      <phase>initialize</phase>
						      <configuration>
						        <target>
						          <echo>Posting APP changes...</echo>
						          <exec executable="curl">
						          	<arg line='-o "/dev/null" -s -F":operation=import" -F":contentType=zip"  -F":contentFile=@${project.build.directory}/zips/apps.zip" http://${sling.user}:${sling.password}@${sling.url}/apps' />
						          </exec>
						          <echo>Done Posting!</echo>
						        </target>
						      </configuration>
						      <goals>
						        <goal>run</goal>
						      </goals>
						    </execution>
		                </executions>
		            </plugin>	
				</plugins>
			</build>
		</profile>
	</profiles>

